---
import '../styles/global.css'
import { ClientRouter } from 'astro:transitions'
import { Header } from '../components/Header.tsx'
import { Image } from 'astro:assets'
import Logo from '../assets/LOGO SERFLOW.png'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="bg-primary">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <ClientRouter />
    <div
      class="min-h-dvh h-full flex flex-col bg-primary px-8 pt-4 pb-16 relative overflow-x-hidden"
    >
      <div transition:persist>
        <Header client:load>
          <Image alt="" src={Logo} class="w-24 md:w-36" transition:persist />
        </Header>
      </div>
      <slot />
    </div>
  </body>
</html>

<script>
  if ('scrollRestoration' in history) {
    history.scrollRestoration = 'manual'
  }
</script>
