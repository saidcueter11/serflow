---
interface Props {
  src: string
  alt?: string
  numberCols?: number
}

const { src, alt, numberCols = 1 } = Astro.props
---

<img
  class:list={[
    'min-w-full md:w-full md:my-0 mb-0 object-cover aspect-video snap-center rounded-lg md:h-56',
    {
      ':col-span-2': numberCols === 2,
    },
  ]}
  src={src}
  alt={alt}
/>
